<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context=".login.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/login_rect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        app:layout_constraintBottom_toBottomOf="@id/register_btn"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/ltitle_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_toolbar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="登入"
        android:textColor="@color/black"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toTopOf="@+id/login_rect" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/acc_text_input_layout"
        style="@style/MyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/login_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/acc_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_edit_text_height"
            android:inputType="text"
            android:maxLines="1"
            android:hint="帳號" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pw_text_input_layout"
        style="@style/MyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/acc_text_input_layout"
        app:layout_constraintStart_toStartOf="@+id/acc_text_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/acc_text_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pw_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_edit_text_height"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="密碼" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/orange_btn"
        android:text="登入"
        android:textColor="@color/white"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/pw_text_input_layout"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />



    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="沒有帳號?註冊"
        android:textColor="@color/black"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>