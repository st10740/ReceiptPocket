<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/login_rect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-24dp"
        android:background="@drawable/white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        app:layout_constraintBottom_toBottomOf="@id/register_btn"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_toolbar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="登入"
        android:textColor="@color/black"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toTopOf="@+id/login_rect" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/acc_textinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/login_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="帳號" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pw_textinput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/acc_textinput"
        app:layout_constraintStart_toStartOf="@+id/acc_textinput"
        app:layout_constraintTop_toBottomOf="@+id/acc_textinput">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="密碼" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/orange_btn"
        android:text="登入"
        android:textColor="@color/white"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/pw_textinput"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/accf_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帳號錯誤"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/pw_textinput"
        app:layout_constraintStart_toStartOf="@+id/acc_textinput"
        app:layout_constraintTop_toBottomOf="@+id/acc_textinput" />

    <TextView
        android:id="@+id/pwf_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密碼錯誤"
        android:textColor="@color/red"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/login_btn"
        app:layout_constraintStart_toStartOf="@+id/pw_textinput"
        app:layout_constraintTop_toBottomOf="@+id/pw_textinput" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="沒有帳號?註冊"
        android:textColor="@color/brown"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/login_rect"
        app:layout_constraintStart_toStartOf="@+id/login_rect"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>