<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context=".register.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/register_rect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/white_rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_txt"
        app:layout_constraintBottom_toBottomOf="@id/back_btn"/>

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_toolbar"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="建立會員"
        android:textColor="@color/black"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/register_rect"
        app:layout_constraintStart_toStartOf="@+id/register_rect"
        app:layout_constraintTop_toTopOf="@+id/register_rect" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/acc_textinput"
        style="@style/MyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="@+id/register_rect"
        app:layout_constraintStart_toStartOf="@+id/register_rect"
        app:layout_constraintTop_toBottomOf="@+id/register_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="帳號" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_textinput"
        style="@style/MyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/acc_textinput"
        app:layout_constraintStart_toStartOf="@+id/acc_textinput"
        app:layout_constraintTop_toBottomOf="@+id/acc_textinput">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:maxLines="1"
            android:hint="暱稱" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pw_textinput"
        style="@style/MyTextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/acc_textinput"
        app:layout_constraintStart_toStartOf="@+id/acc_textinput"
        app:layout_constraintTop_toBottomOf="@+id/name_textinput">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:hint="密碼" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/orange_btn"
        android:text="註冊"
        android:textColor="@color/white"
        android:textSize="@dimen/otext_size"
        app:layout_constraintEnd_toEndOf="@+id/register_rect"
        app:layout_constraintStart_toStartOf="@+id/register_rect"
        app:layout_constraintTop_toBottomOf="@+id/pw_textinput"
        tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />



    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="返回"
        android:textColor="@color/black"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="@+id/register_rect"
        app:layout_constraintStart_toStartOf="@+id/register_rect"
        app:layout_constraintTop_toBottomOf="@+id/register_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>