<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pocket.win.WinDetailFragment"
    android:background="@drawable/screen_background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/win_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/win_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_title_receipts_detail"
        android:textColor="@color/white"
        android:textSize="@dimen/mtitle_size"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/win_detail_toolbar"/>

    <View
        android:id="@+id/white_rect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/white_rect"
        android:layout_marginStart="@dimen/lr_margin"
        android:layout_marginEnd="@dimen/lr_margin"
        android:layout_marginTop="@dimen/lr_margin"
        android:layout_marginBottom="@dimen/lr_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/win_detail_title"/>

    <TextView
        android:id="@+id/win_prize_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lr_margin"
        android:text="中獎金額 $200,000"
        android:textSize="@dimen/ltext_size"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toTopOf="@id/white_rect"/>

    <TextView
        android:id="@+id/code_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="AB-12345678"
        android:textColor="@color/black"
        android:textSize="@dimen/mltitle_size"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/win_prize_textview"/>

    <TextView
        android:id="@+id/date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="民國112年1月1日"
        android:textSize="@dimen/ltext_size"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/code_textview"/>

    <TextView
        android:id="@+id/store_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="福勝亭"
        android:textColor="@color/black"
        android:textSize="@dimen/mtitle_size"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/date_textview"/>

    <TextView
        android:id="@+id/price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="消費金額  $218"
        android:textSize="@dimen/ltext_size"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/store_textview"/>

    <TextView
        android:id="@+id/product_detail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/lr_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="商品明細"
        android:textColor="@color/black"
        android:textSize="@dimen/ltext_size"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/price_textview"/>

    <View
        android:id="@+id/gray_rect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/lr_margin"
        android:layout_marginEnd="@dimen/lr_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="@id/white_rect"
        app:layout_constraintEnd_toEndOf="@id/white_rect"
        app:layout_constraintTop_toBottomOf="@id/product_detail_textview"
        app:layout_constraintBottom_toBottomOf="@id/white_rect"
        android:background="@drawable/gray_rect_35angle"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/lr_margin"
        app:layout_constraintStart_toStartOf="@id/gray_rect"
        app:layout_constraintEnd_toEndOf="@id/gray_rect"
        app:layout_constraintTop_toTopOf="@id/gray_rect"
        app:layout_constraintBottom_toBottomOf="@id/gray_rect">

        <TextView
            android:id="@+id/describe_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厚切豬排"
            android:textColor="@color/black"
            android:textSize="@dimen/ltext_size"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>